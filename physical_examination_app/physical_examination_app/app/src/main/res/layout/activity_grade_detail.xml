<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="#F3F7F7"
    android:layout_gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:paddingTop="40dp"
        android:paddingBottom="25dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="#06c8fb"
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <ImageView
            android:id="@+id/return_button"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/arrow_left"/>
        <TextView
            android:gravity="center"
            android:textSize="20dp"
            android:textColor="#FFFFFF"
            android:text="成绩信息"
            android:textStyle="bold"
            android:layout_weight="5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"/>
        <ImageView
            android:id="@+id/icon_album"
            android:gravity="right"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_marginRight="10dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="5dp"
        android:background="#FFFFFF"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <TextView
            android:layout_marginLeft="20dp"
            android:gravity="left"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="通过状态"
            android:textSize="15dp"/>
        <TextView
            android:id="@+id/grade_status"
            android:layout_marginRight="25dp"
            android:textSize="12dp"
            android:gravity="right"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="已通过"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="1dp"
        android:background="#FFFFFF"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <TextView
            android:layout_marginLeft="20dp"
            android:gravity="left"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="负责教师"
            android:textSize="15dp"/>
        <TextView
            android:id="@+id/grade_teacher"
            android:layout_marginRight="25dp"
            android:textSize="12dp"
            android:gravity="right"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="张老师"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="1dp"
        android:background="#FFFFFF"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <TextView
            android:layout_marginLeft="20dp"
            android:gravity="left"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="考试日期"
            android:textSize="15dp"/>
        <TextView
            android:id="@+id/grade_date"
            android:layout_marginRight="25dp"
            android:textSize="12dp"
            android:gravity="right"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="2020年12月12日"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="1dp"
        android:background="#FFFFFF"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <TextView
            android:layout_marginLeft="20dp"
            android:gravity="left"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="立定跳远"
            android:textSize="15dp"/>
        <TextView
            android:id="@+id/jump_long"
            android:layout_marginRight="25dp"
            android:textSize="12dp"
            android:gravity="right"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="2.1m"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="1dp"
        android:background="#FFFFFF"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <TextView
            android:layout_marginLeft="20dp"
            android:gravity="left"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="50米跑"
            android:textSize="15dp"/>
        <TextView
            android:id="@+id/fifty_run"
            android:layout_marginRight="25dp"
            android:textSize="12dp"
            android:gravity="right"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="7‘1’‘"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="1dp"
        android:background="#FFFFFF"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <TextView
            android:id="@+id/long_run_name"
            android:layout_marginLeft="20dp"
            android:gravity="left"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="1000米跑"
            android:textSize="15dp"/>
        <TextView
            android:id="@+id/long_run"
            android:layout_marginRight="25dp"
            android:textSize="12dp"
            android:gravity="right"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="4分40秒"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="1dp"
        android:background="#FFFFFF"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <TextView
            android:id="@+id/extra_event_name"
            android:layout_marginLeft="20dp"
            android:gravity="left"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="引体向上"
            android:textSize="15dp"/>
        <TextView
            android:id="@+id/extra_event"
            android:layout_marginRight="25dp"
            android:textSize="12dp"
            android:gravity="right"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="4个"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="1dp"
        android:background="#FFFFFF"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <TextView
            android:layout_marginLeft="20dp"
            android:gravity="left"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="坐位体前屈"
            android:textSize="15dp"/>
        <TextView
            android:id="@+id/sit_bending"
            android:layout_marginRight="25dp"
            android:textSize="12dp"
            android:gravity="right"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="16cm"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="1dp"
        android:background="#FFFFFF"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <TextView
            android:layout_marginLeft="20dp"
            android:gravity="left"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="肺活量"
            android:textSize="15dp"/>
        <TextView
            android:id="@+id/lung_container"
            android:layout_marginRight="25dp"
            android:textSize="12dp"
            android:gravity="right"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="5000ml"/>
    </LinearLayout>
    <LinearLayout
        android:paddingBottom="20dp"
        android:layout_marginTop="1dp"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_marginBottom="5dp"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="20dp"
                android:gravity="left"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="考试场地"
                android:textSize="15dp"/>
            <TextView
                android:id="@+id/grade_location"
                android:layout_marginRight="25dp"
                android:textSize="12dp"
                android:gravity="right"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="西操场"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/exam_background"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:background="@drawable/ground1"
            android:layout_gravity="center_horizontal"
            android:layout_width="380dp"
            android:layout_height="170dp"/>
    </LinearLayout>
</LinearLayout>