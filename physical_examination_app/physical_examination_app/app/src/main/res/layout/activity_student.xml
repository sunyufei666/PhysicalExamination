<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_marginTop="35dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center">
            <com.example.physical_examination_app.RoundImageView
                android:src="@mipmap/initial_avatar"
                android:layout_width="70dp"
                android:layout_height="70dp"/>
            <TextView
                android:gravity="center"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="杨锡涛"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="right"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <ImageView
                android:layout_marginTop="15dp"
                android:layout_marginRight="20dp"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@mipmap/pen" />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:background="#cccccc"
        android:layout_width="350dp"
        android:layout_height="1dp"/>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_width="350dp"
        android:layout_height="500dp">
        <!--第一行-->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="150dp">
            <LinearLayout
                android:id="@+id/my_avatar"
                android:gravity="center"
                android:orientation="vertical"
                android:background="@drawable/white_corner"
                android:layout_width="100dp"
                android:layout_height="150dp">
                <TextView
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/grey_circle_corner"
                    android:layout_width="10dp"
                    android:layout_height="10dp"/>
                <ImageView
                    android:layout_marginBottom="20dp"
                    android:src="@drawable/item_avatar"
                    android:layout_width="60dp"
                    android:layout_height="60dp"/>
                <TextView
                    android:text="我的头像"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:background="@drawable/white_corner"
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:layout_marginLeft="25dp">
                <TextView
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/grey_circle_corner"
                    android:layout_width="10dp"
                    android:layout_height="10dp"/>
                <ImageView
                    android:layout_marginBottom="20dp"
                    android:src="@drawable/item_detail"
                    android:layout_width="60dp"
                    android:layout_height="60dp"/>
                <TextView
                    android:text="详细信息"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:background="@drawable/white_corner"
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:layout_marginLeft="25dp">
                <TextView
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/grey_circle_corner"
                    android:layout_width="10dp"
                    android:layout_height="10dp"/>
                <ImageView
                    android:layout_marginBottom="20dp"
                    android:src="@drawable/item_grade"
                    android:layout_width="60dp"
                    android:layout_height="60dp"/>
                <TextView
                    android:text="我的成绩"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
        <!--第二行-->
        <LinearLayout
            android:layout_marginTop="25dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="150dp">
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:background="@drawable/white_corner"
                android:layout_width="100dp"
                android:layout_height="150dp">
                <TextView
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/grey_circle_corner"
                    android:layout_width="10dp"
                    android:layout_height="10dp"/>
                <ImageView
                    android:layout_marginBottom="20dp"
                    android:src="@drawable/item_reserve"
                    android:layout_width="60dp"
                    android:layout_height="60dp"/>
                <TextView
                    android:text="预约考试"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:background="@drawable/white_corner"
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:layout_marginLeft="25dp">
                <TextView
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/grey_circle_corner"
                    android:layout_width="10dp"
                    android:layout_height="10dp"/>
                <ImageView
                    android:layout_marginBottom="20dp"
                    android:src="@drawable/item_examination"
                    android:layout_width="60dp"
                    android:layout_height="60dp"/>
                <TextView
                    android:text="我的考试"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:background="@drawable/white_corner"
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:layout_marginLeft="25dp">
                <TextView
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/grey_circle_corner"
                    android:layout_width="10dp"
                    android:layout_height="10dp"/>
                <ImageView
                    android:layout_marginBottom="20dp"
                    android:src="@drawable/item_history"
                    android:layout_width="60dp"
                    android:layout_height="60dp"/>
                <TextView
                    android:text="历史考试"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
        <!--第三行-->
        <LinearLayout
            android:layout_marginTop="25dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="150dp">
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:background="@drawable/white_corner"
                android:layout_width="100dp"
                android:layout_height="150dp">
                <TextView
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/grey_circle_corner"
                    android:layout_width="10dp"
                    android:layout_height="10dp"/>
                <ImageView
                    android:layout_marginBottom="20dp"
                    android:src="@drawable/item_setting"
                    android:layout_width="60dp"
                    android:layout_height="60dp"/>
                <TextView
                    android:text="设置"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:background="#cccccc"
        android:layout_width="350dp"
        android:layout_height="1dp"/>
</LinearLayout>